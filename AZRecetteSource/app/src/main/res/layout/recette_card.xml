<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:RecetteCardView="http://schemas.android.com/apk/res-auto"
        android:id="@+id/RecetteCardView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:elevation="3dp"
        RecetteCardView:cardCornerRadius="4dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_alignParentStart="true"
                android:id="@+id/thumbnail"
                android:clickable="false"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/title"
                android:textSize="15sp"
                android:layout_toRightOf="@+id/thumbnail" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/preptime"
                android:layout_below="@+id/title"
                android:textSize="15sp"
                android:layout_toRightOf="@+id/thumbnail" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/cooktime"
                android:layout_below="@+id/preptime"
                android:textSize="15sp"
                android:layout_toRightOf="@+id/thumbnail" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/difficulte"
                android:layout_below="@+id/cooktime"
                android:textSize="15sp"
                android:layout_toRightOf="@+id/thumbnail" />

        </RelativeLayout>

</android.support.v7.widget.CardView>

